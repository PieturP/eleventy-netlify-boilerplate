<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header>
			<em>
				<a href="{{ '/' | url }}">{{ metadata.title }}</a>
			</em>
			{% include "components/nav.njk" %}
		</header>

		<main>
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}
		<script async src="https://cdn.snipcart.com/themes/v3.2.2/default/snipcart.js"></script>
		<div hidden id="snipcart" data-api-key="{{ metadata.SNIPCART_API_KEY }}"></div>
	</body>

</html>
