{% set loadSnipcart = false %}
<head>
  <title>{{ renderData.title or title or metadata.title }}</title>
  {# <meta charset="utf-8"> #}
  {# <link rel="dns-prefetch" href="https://identity.netlify.com"> #}
  <link rel="preconnect" href="https://app.snipcart.com" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta name="description" content="{{ metaDescription or renderData.metaDescription or metadata.description }}">

  <!-- DISABLE ROBOTS INDEXING THIS SITE FOR NOW -->
  <meta name="robots" content="noindex">
  <!-- END -->

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Port+Lligat+Slab%7cPort+Lligat+Sans%7cOpen+Sans:300" rel="stylesheet" type="text/css">
  <!-- Site -->
  {# <link href="css/site.min.css" rel="stylesheet"> #}
  {#<script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>#}
  <!-- Font Awesome -->
  {# @TODO: remove Font Awesome. Change into SVG icons #}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">



  {% set css %}
    {% include "assets/css/inline.css" %}
  {% endset %}
  <style>{{ css | cssmin | safe }}</style>
  {% set js %}
    {% include "assets/js/inline.js" %}
  {% endset %}
  <script>{{ js | jsmin | safe }}</script>
  <link rel="stylesheet" href="/css/main.css" />
  {% if loadSnipcart %}
    <link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.2.2/default/snipcart.css" />
    <script async src="https://cdn.snipcart.com/themes/v3.3.0/default/snipcart.js"></script>
  {% endif %}
</head>
